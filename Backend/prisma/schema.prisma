generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User model 
model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  posts Post[]
}

// Post Model refrences to the User.
model Post {
  id Int @id @default(autoincrement())
  title String
  content String
  isPublished Boolean @default(false)
  author User @relation(fields: [authorId], references: [id])
  authorId Int

}